{
  "description": "Test payloads for AppRunner MCP Connector",
  "baseUrl": "http://localhost:8091",
  "tests": [
    {
      "name": "Health Check",
      "method": "GET",
      "endpoint": "/health",
      "description": "Verify connector is running and healthy"
    },
    {
      "name": "Server Info",
      "method": "GET",
      "endpoint": "/",
      "description": "Get connector and AppRunner information"
    },
    {
      "name": "List Tools",
      "method": "POST",
      "endpoint": "/mcp",
      "contentType": "application/json",
      "body": {
        "jsonrpc": "2.0",
        "method": "tools/list",
        "id": 1
      },
      "description": "List available tools from AppRunner"
    },
    {
      "name": "Initialize Connection",
      "method": "POST",
      "endpoint": "/mcp",
      "contentType": "application/json",
      "body": {
        "jsonrpc": "2.0",
        "method": "initialize",
        "params": {
          "protocolVersion": "2025-06-18",
          "capabilities": {},
          "clientInfo": {
            "name": "claude",
            "version": "1.0.0"
          }
        },
        "id": 1
      },
      "description": "Initialize MCP connection with AppRunner"
    },
    {
      "name": "Investigate Journey (Documents)",
      "method": "POST",
      "endpoint": "/mcp",
      "contentType": "application/json",
      "body": {
        "jsonrpc": "2.0",
        "method": "tools/call",
        "params": {
          "tool": "investigate_journey",
          "parameters": {
            "journeyId": "5a5caba1-623f-45c5-8e02-592fb6c4dc61",
            "query": "What documents are required for this journey?",
            "scope": "documents"
          }
        },
        "id": 2
      },
      "description": "Investigate a journey for document requirements"
    },
    {
      "name": "Investigate Journey (Requirements)",
      "method": "POST",
      "endpoint": "/mcp",
      "contentType": "application/json",
      "body": {
        "jsonrpc": "2.0",
        "method": "tools/call",
        "params": {
          "tool": "investigate_journey",
          "parameters": {
            "journeyId": "5a5caba1-623f-45c5-8e02-592fb6c4dc61",
            "query": "What are the compliance requirements for this journey?",
            "scope": "requirements"
          }
        },
        "id": 3
      },
      "description": "Investigate a journey for compliance requirements"
    },
    {
      "name": "Invalid JSON-RPC Request",
      "method": "POST",
      "endpoint": "/mcp",
      "contentType": "application/json",
      "body": {
        "method": "tools/list",
        "id": 4
      },
      "expectedError": true,
      "description": "Test error handling for invalid JSON-RPC (missing jsonrpc field)"
    },
    {
      "name": "Invalid JSON",
      "method": "POST",
      "endpoint": "/mcp",
      "contentType": "application/json",
      "body": "{invalid json}",
      "expectedError": true,
      "description": "Test error handling for malformed JSON"
    }
  ],
  "curlExamples": {
    "healthCheck": "curl http://localhost:8091/health",
    "serverInfo": "curl http://localhost:8091/",
    "listTools": "curl -X POST http://localhost:8091/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\": \"2.0\", \"method\": \"tools/list\", \"id\": 1}'",
    "investigateJourney": "curl -X POST http://localhost:8091/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\": \"2.0\", \"method\": \"tools/call\", \"params\": {\"tool\": \"investigate_journey\", \"parameters\": {\"journeyId\": \"5a5caba1-623f-45c5-8e02-592fb6c4dc61\", \"query\": \"What documents are required?\", \"scope\": \"documents\"}}, \"id\": 2}'"
  },
  "postmanCollection": {
    "info": {
      "name": "AppRunner MCP Connector",
      "description": "Test collection for AppRunner MCP Connector",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Health Check",
        "request": {
          "method": "GET",
          "url": {
            "raw": "{{baseUrl}}/health",
            "host": ["{{baseUrl}}"],
            "path": ["health"]
          }
        }
      },
      {
        "name": "List Tools",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\"jsonrpc\": \"2.0\", \"method\": \"tools/list\", \"id\": 1}"
          },
          "url": {
            "raw": "{{baseUrl}}/mcp",
            "host": ["{{baseUrl}}"],
            "path": ["mcp"]
          }
        }
      }
    ],
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:8091"
      }
    ]
  }
}
